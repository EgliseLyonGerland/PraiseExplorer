---
import '@fontsource/playfair-display/500.css'
import '@fontsource/playfair-display/500-italic.css'
import '@fontsource/source-sans-pro'
import { ViewTransitions } from 'astro:transitions'
import Menu from '@/components/Menu'
import fetchSongs from '@/libs/loadSongs'
import Logo from '@/components/Logo'
import {
  MoonIcon,
  SunIcon,
  Bars2Icon,
  XMarkIcon,
} from '@heroicons/react/24/outline'

interface Props {
  title: string
}

const { songId } = Astro.params
const { title } = Astro.props

const songs = await fetchSongs()
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Explorateur des chants de louange de l’Église Lyon Gerland"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="drawer lg:drawer-open">
      <input id="sidenav" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <div class="sticky flex top-0 p-4">
          <label for="sidenav" class="btn drawer-button lg:hidden btn-circle">
            <Bars2Icon className="h-6" />
          </label>
          <div class="ml-auto">
            <slot name="header" />
          </div>
        </div>

        <slot />
      </div>
      <div class="drawer-side">
        <label for="sidenav" aria-label="close sidebar" class="drawer-overlay"
        ></label>
        <div
          class="menu bg-base-200 text-base-content min-h-full p-4 md:p-8 w-full lg:w-[420px] xl:w-[512px]"
        >
          <div class="flex items-center gap-4">
            <Logo className="h-10 fill-base-content" />
            <span class="flex gap-2 items-center">
              <span class="font-serif font-bold text-xl leading-none">
                Chants
              </span>
              <span class="badge badge-primary badge-sm mb-4">Beta</span>
            </span>
            <span class="flex-1"></span>
            <!-- <label class="swap swap-rotate ml-auto">
              <input type="checkbox" class="theme-controller" value="dark" />

              <SunIcon className="swap-off size-6 fill-current" />
              <MoonIcon className="swap-on size-6 fill-current" />
            </label> -->
            <label
              for="sidenav"
              class="btn btn-ghost drawer-button lg:hidden btn-circle"
            >
              <XMarkIcon className="h-6" />
            </label>
          </div>
          <Menu
            data={songs}
            currentSongId={songId}
            transition:persist
            client:load
          />
        </div>
      </div>
    </div>
  </body>
</html>
